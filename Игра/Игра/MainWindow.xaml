<Window x:Name="Game" x:Class="Игра.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Игра"
        mc:Ignorable="d"
        Title="Hardcore" Height="450" Width="800" FontSize ="20" WindowStartupLocation="CenterScreen">
    <Grid x:Name="Main_Window" Background="Black" >
        <Image Margin="20,20,20,330" Source="/hardcore.jpg" Stretch="Fill"/>
        <Button x:Name="New_Game" Content="New Game" Height="30" Width="120"   HorizontalAlignment="Left" Margin="330,180,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" BorderBrush="Black" Click="New_Game_Click" />
        <Button x:Name="Exit" Content="Exit" Height="30" Width="120" HorizontalAlignment="Left" Margin="332,223,0,0" VerticalAlignment="Top" Background="Black" Foreground="White" BorderBrush="Black" Click="Exit_Click" />
    </Grid>
</Window>
